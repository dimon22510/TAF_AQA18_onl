<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Main Suite">
    <test name="Smoke Test">
        <groups>
            <define name="Smoke Group">
                <include name="Smoke"/>
            </define>
            <run>
                <include name="Smoke Group"/>
            </run>
        </groups>
        <classes>
            <class name="tests.testnghomework.DivTests"/>
        </classes>
    </test>
    <test name="Regression Test">
        <groups>
            <define name="Regression Group">
                <include name="Regression"/>
            </define>
            <run>
                <include name="Regression Group"/>
            </run>
            </groups>
        <classes>
            <class name="tests.testnghomework.DivTests"/>
        </classes>
    </test>

</suite>